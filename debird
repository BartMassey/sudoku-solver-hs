# Turn "Bird Tracks" in Literate Haskell into Markdown code
# blocks.

/^> / {
    if (nblock == 0)
       print "```haskell"
    sub(/^> /, "")
    block[++nblock] = $0
    next
}

{
    if (nblock > 0) {
        for (i = 1; i <= nblock; i++)
            print block[i]
        print "```"
    }
    nblock = 0
    print $0
}

END {
    if (nblock > 0) {
        for (i = 1; i <= nblock; i++)
            print block[i]
        print "```"
    }
}
